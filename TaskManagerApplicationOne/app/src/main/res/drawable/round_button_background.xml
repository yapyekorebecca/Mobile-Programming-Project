<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="#FF4081"/> <!-- Background color for the button when pressed -->
            <corners android:radius="20dp"/> <!-- Radius for rounded corners, adjust as needed -->
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="#FFC107"/> <!-- Default background color for the button -->
            <corners android:radius="20dp"/> <!-- Radius for rounded corners, adjust as needed -->
        </shape>
    </item>

</selector>
